<h2 class="text-lg mb-4 text-center font-bold">Log in</h2>

<%- if devise_mapping.omniauthable? %>
	<%- resource_class.omniauth_providers.each do |provider| %>
		<%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class:"bg-blue-600 rounded-lg text-sm text-white w-full p-4 my-2" %><br />
	<% end %>
<% end %>
