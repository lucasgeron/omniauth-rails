<!DOCTYPE html>
<html>
	<head>
		<title>OmniauthRails</title>
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

		<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
		<%= javascript_importmap_tags %>
	</head>

	<body >

		<div class=" h-screen bg-gray-200">
			<div class="container mx-auto grid h-screen place-items-center">

				<div class="bg-gray-100 rounded-lg w-1/5 p-4">
					<% if notice.present? or alert.present? %>
						<div class="bg-white rounded-lg p-2 tex-center font-bold">
							<p class="text-blue-600"><%= notice %></p>
							<p class="text-red-600"><%= alert %></p>
						</div>
					<% end %>

					<%= yield %>
				</div>

			</div>
		</div>

	</body>
</html>
