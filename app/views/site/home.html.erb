<div class="text-center text-lg tracking-widest uppercase font-bold">
	that's all folks
</div>

<% if current_user %>
	<div class="grid grid-cols-1 space-y-1">
		<p class="text-center"> you are logged as:</p>
		<h2 class="text-center font-semibold" ><%= current_user.email %></h2>
		<%= image_tag(current_user.avatar_url, class:"rounded-full border-4 border-white shadow-md mx-auto") %>

		<div class="flex text-center">
			<%= link_to "Edit Account", edit_user_registration_path, class:" bg-blue-600 grow text-white p-2 rounded-lg w-full my-1 cursor-pointer" %>
		</div>

		<%= button_to "Logout", destroy_user_session_path, data: {turbo: "false"}, class:" bg-gray-300 hover:bg-gray-600 text-gray-600 hover:text-white p-2 rounded-lg w-full my-1 cursor-pointer", method: :delete %>
	</div>
<% else %>
	<%= link_to "Login", new_user_session_path %>
<% end %>
